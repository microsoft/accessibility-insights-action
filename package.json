{
    "name": "accessibility-insights-action",
    "version": "0.0.1",
    "description": "This project welcomes contributions and suggestions.  Most contributions require you to agree to a\r Contributor License Agreement (CLA) declaring that you have the right to, and actually do, grant us\r the rights to use your contribution. For details, visit https://cla.opensource.microsoft.com.",
    "main": "dist/index.js",
    "scripts": {
        "build": "npx webpack --config ./webpack.config.js --colors",
        "watch:build": "npx webpack --config ./webpack.config.js --colors --watch",
        "cbuild": "npm-run-all --serial clean build",
        "clean": "rimraf dist test-results",
        "format": "npx prettier --write \"**/*\"",
        "format:check": "npx prettier --check \"**/*\"",
        "lint": "npx tslint -c ./tslint.json -p ./tsconfig.json",
        "lint:fix": "npx tslint --fix -c ./tslint.json -p ./tsconfig.json",
        "copyright:check": "npx license-check-and-add check -f ./licence-check-and-add-config.json",
        "copyright:fix": "npx license-check-and-add add -f ./licence-check-and-add-config.json",
        "test": "npx jest",
        "precheckin": "npm-run-all --serial copyright:check format:check cbuild lint test",
        "watch:test": "npx jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/microsoft/accessibility-insights-action.git"
    },
    "keywords": [
        "actions"
    ],
    "author": "Microsoft",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/microsoft/accessibility-insights-action/issues"
    },
    "homepage": "https://github.com/microsoft/accessibility-insights-action#readme",
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "case-sensitive-paths-webpack-plugin": "^2.3.0",
        "copy-webpack-plugin": "^5.1.1",
        "fork-ts-checker-webpack-plugin": "^4.0.3",
        "jest": "^25.1.0",
        "jest-circus": "^25.1.0",
        "jest-junit": "^10.0.0",
        "license-check-and-add": "^3.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.0",
        "ts-loader": "^6.2.1",
        "tslint": "^6.0.0",
        "tslint-lines-between-class-members": "^1.3.6",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.7.5",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.11"
    }
}

{
    "manifestVersion": 1,
    "id": "accessibility-insights",
    "name": "Accessibility Insights for Azure DevOps",
    "version": "1.0.0",
    "publisher": "accessibility-insights",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Scan accessibility issues in an Azure DevOps pipeline",
    "categories": ["Azure Pipelines"],
    "icons": {
        "default": "pkg/extension-icon.png"
    },
    "files": [
        {
            "path": "pkg"
        }
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://aka.ms/ado-extension-usage"
        }
    },
    "contributions": [
        {
            "id": "task",
            "type": "ms.vss-distributed-task.task",
            "targets": ["ms.vss-distributed-task.tasks"],
            "properties": {
                "name": "pkg"
            }
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/accessibility-insights-action"
    }
}
